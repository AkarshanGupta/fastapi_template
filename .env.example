# Application Settings
APP_NAME=FastAPI Template
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=False
API_V1_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Feature Flags - Enable/Disable Optional Features
ENABLE_DB_POSTGRES=False
ENABLE_DB_MONGO=False
ENABLE_OCR=False
ENABLE_STORAGE=False

# PostgreSQL Settings (only used if ENABLE_DB_POSTGRES=True)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=fastapi_db
# Or provide full URL:
# POSTGRES_URL=postgresql://user:password@localhost:5432/dbname

# MongoDB Settings (only used if ENABLE_DB_MONGO=True)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=
MONGO_PASSWORD=
MONGO_DB=fastapi_db
# Or provide full URL:
# MONGO_URL=mongodb://user:password@localhost:27017/dbname

# OCR Settings (only used if ENABLE_OCR=True)
OCR_PROVIDER=tesseract
# Options: tesseract, google_vision, aws_textract
OCR_API_KEY=your_ocr_api_key_here

# Storage Settings (only used if ENABLE_STORAGE=True)
STORAGE_TYPE=local
# Options: local, s3, gcs
STORAGE_PATH=./storage

# AWS Settings (for S3 storage or AWS Textract)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_bucket_name
AWS_REGION=us-east-1

# Logging
LOG_LEVEL=INFO
